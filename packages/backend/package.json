{
    "name": "@minierp/backend",
    "version": "1.0.0",
    "private": true,
    "type": "module",
    "description": "MiniERP Backend API Server",
    "main": "src/server.js",
    "scripts": {
        "dev": "nodemon src/server.js",
        "start": "node src/server.js",
        "seed": "node src/seeders/seed.js",
        "test": "NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --detectOpenHandles --forceExit",
        "test:watch": "NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --watch",
        "test:coverage": "NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --coverage --detectOpenHandles --forceExit",
        "generate:barcodes": "node src/scripts/generateAllBarcodes.js",
        "generate:barcodes:individual": "node src/scripts/generateAllBarcodes.js individual",
        "generate:barcodes:batch": "node src/scripts/generateAllBarcodes.js batch",
        "generate:barcodes:labels": "node src/scripts/generateAllBarcodes.js labels",
        "generate:barcodes:thermal": "node src/scripts/generateAllBarcodes.js thermal",
        "generate:barcodes:large": "node src/scripts/generateAllBarcodes.js large",
        "generate:barcodes:simple": "node src/scripts/generateAllBarcodes.js simple",
        "generate:barcodes:category": "node src/scripts/generateAllBarcodes.js category"
    },
    "dependencies": {
        "bcryptjs": "^3.0.3",
        "bwip-js": "^4.8.0",
        "chalk": "^5.6.2",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "jsonwebtoken": "^9.0.2",
        "multer": "^2.0.2",
        "pdfkit": "^0.17.2",
        "pg": "^8.16.3",
        "pg-hstore": "^2.3.4",
        "sequelize": "^6.37.7",
        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-express": "^5.0.1"
    },
    "devDependencies": {
        "@jest/globals": "^30.2.0",
        "jest": "^30.2.0",
        "nodemon": "^3.0.2",
        "sqlite3": "^5.1.7",
        "supertest": "^7.1.4"
    }
}
