{
  "name": "@mini-erp/pos",
  "version": "1.0.0",
  "description": "Point of Sales Desktop Application",
  "main": "./out/main/index.js",
  "scripts": {
    "dev": "electron-vite dev",
    "start": "electron-vite preview",
    "prebuild": "electron-vite build",
    "build": "npm run prebuild && electron-builder",
    "build:win": "npm run prebuild && electron-builder --win",
    "build:mac": "npm run prebuild && electron-builder --mac",
    "build:linux": "npm run prebuild && electron-builder --linux"
  },
  "keywords": [
    "electron",
    "pos",
    "point-of-sales"
  ],
  "author": "Eltheris",
  "license": "ISC",
  "devDependencies": {
    "@electron-toolkit/utils": "^3.0.0",
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-vite": "^2.0.0",
    "vite": "^5.0.0"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "build": {
    "appId": "com.eltheris.mini-erp-pos",
    "productName": "Mini ERP POS",
    "directories": {
      "output": "dist"
    },
    "files": [
      "out/**/*",
      "assets/**/*"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/icon.icns",
      "category": "public.app-category.business"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icon.png",
      "category": "Office"
    }
  }
}
