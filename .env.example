# Example .env for production docker-compose
# Copy this file to .env and update values before running

# Ports
BACKEND_PORT=5000
FRONTEND_PORT=80

# Node env
NODE_ENV=production

# Database (point to your external PostgreSQL or other DB)
DB_HOST=your-db-host.example.com
DB_PORT=5432
DB_NAME=minierp
DB_USER=user
DB_PASSWORD=password

# App secrets
JWT_SECRET=change_me

# Image names (set these to full registry paths if you push to a registry)
# Example: BACKEND_IMAGE=ghcr.io/yourorg/minierp-backend:1.0.0
BACKEND_IMAGE=minierp-backend:latest
FRONTEND_IMAGE=minierp-frontend:latest

# Optional: uploads path (container path is /usr/src/app/uploads)
# UPLOADS_PATH=/usr/src/app/uploads
